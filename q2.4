# Calculate the correlation matrix
correlation_matrix <- cor(data)

# Display the correlation matrix
print(correlation_matrix)

# Extract correlations with the dependent variable (Salaries)
salaries_correlations <- correlation_matrix["Salaries", ]
cat("\nCorrelations with Salaries:\n")
print(salaries_correlations)

# Determine strong and weak correlations
strong_correlations <- names(salaries_correlations[abs(salaries_correlations) > 0.5])
